package views {		import views.AbstractClock;	import models.ClockModel;	import flash.events.Event;			public class DigitalView extends AbstractClock {						public function DigitalView(clockModel:ClockModel) {			super(clockModel);			addEventListener(Event.CHANGE, handleTimeChange);		}				override protected function updateTime():void {			var hours = _model.hours;			var mins = _model.minutes;			var secs = _model.seconds;			var date = _model.day;			var month = _model.month + 1;			var year = _model.year;			if(_model.hours < 10) {				hours = '0' + _model.hours;			}						if(_model.minutes < 10) {				mins = '0' + _model.minutes;			}						if(_model.seconds < 10) {				secs = '0' + _model.seconds;			}			if(_model.month < 9) {				month = '0' + (_model.month + 1);			}						if(_model.day < 10) {				date = '0' + _model.day;			}						Time.text = hours + ':' + mins + ':' + secs;			Date.text = date + '.' + month + '.' + year;			Stardate.text = _model.stardate;		}				private function handleTimeChange(e:Event):void {			updateTime();		}	}	}